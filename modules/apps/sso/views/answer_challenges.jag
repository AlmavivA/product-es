    <!-- Placed at the end of the document so the pages load faster -->
    <script src="views/js/jquery-1.8.3.min.js"></script>
    <script src="views/js/bootstrap.min.js"></script>
    <script src="views/js/jquery.validate.js"></script>
    <script type="text/javascript">
        $(function () {
       function verifyChallenge() {

              if (!$('#challengeForm').valid()) {
                     return;
              }

              var formData = $('#challengeForm').serialize()

              $.post('challenge', formData, function (data) {
                     if (JSON.parse(data).error == 'false') {
                            $('#challengeFormError').hide();
                            var result = JSON.parse(data);
                            window.location = 'reset_password?username=' + $('#username').val() +
                            '&verification_key=' + result.verificationKey;

                     } else {
                            $('#challengeFormError').show();
                            $('#challengeFormError').text(JSON.parse(data).msg);

                     }
              });
       }

       $('#resetPassword').bind('click', verifyChallenge);

       $('#challengeForm input').bind('keypress', function (e) {
              if (e.which == 13) {
                     verifyChallenge();
              }
       });

});
    </script>
  </body>
