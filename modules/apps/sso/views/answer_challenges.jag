                                    <input type="hidden" id="verify-confirmation" name="verify-confirmation" value="<%=verificationKey3%>">
                                    <input type="hidden" id="question-id" name="question-id" value="<%=questionId%>">
                                    <input type="hidden" id="username" name="username" value="<%=request.getParameter("username")%>">
                                    <input id="reg-action" name="action" type="hidden" value="verifyChallenge">

                                    <button id="resetPassword"  class="btn btn-large"
                                            type="button">Continue</button>
                                </form>
								    	</div>

