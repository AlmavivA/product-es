var verificationKey1 = request.getParameter('verificationKey'),
    userName = request.getParameter('username'),
    log = new Log('challenges_view');

var recoveryModule = require('account-management').recovery;
var idDTO = recoveryModule.getChallengeQuestionIds(userName, verificationKey1);
var verificationKey2 = idDTO.getKey();
var questionId = idDTO.getIds()[0];

var questionDTO = recoveryModule.getChallengeQuestionOfUser(userName, verificationKey2, questionId);
var question = questionDTO.getQuestion();
var verificationKey3 = questionDTO.getKey();

%>
