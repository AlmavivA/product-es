 <form class="form-horizontal" id='form-asset-edit' method='post' action='{{url ""}}/asts/{{rxt.shortName}}/api/assets'>
    <div class="control-group">
             {{#each assets.tables}}                                             
                <tr>
                        {{renderTable .}}
                </tr>                                    
            {{/each}}  
    </div> 
    <div id="saveButtons" class="form-actions">
                            <input type="submit" value="Update" class="btn btn-primary"
                                   name="editAssetButton" id="editAssetButton">
                            <input type="reset" value="Reset" class="btn">
                            <input type="hidden" value="{{rxt.shortName}}" name="{{rxt.shortName}}" id="meta-asset-type">
    </div>   
</form>