 */
var user=require('store').user;
var username='user1';
var password='user1';
var isAuthenticated=user.login(username,password,session);

if(isAuthenticated){
  session.put("LOGGED_IN_USER", username);
  session.put("Loged", "true");
  response.sendRedirect('/publisher/assets/gadget/');
}
else{
  response.sendError(401);
}


